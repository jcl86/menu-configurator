<div class="w-full overflow-hidden shadow rounded-lg cursor-pointer m-auto bg-gray-50">
    <a href="#" class="w-full block h-full">
        <img alt="@Dish.Title" src="https://zuremenua.com/img/platos/1/patatak_saltsa_berdean.jpg"
             class="max-h-60 w-full object-cover" />
        <div class="w-full p-4">
            <p class="text-gray-800 dark:text-white text-xl font-medium mb-2">
                @Dish.Title
            </p>
            <p class="text-gray-600 dark:text-gray-300 font-light text-md">
                @Dish.Ingredients
            </p>
            <div class="flex flex-wrap justify-starts items-center mt-4 border-t-2 pt-5">
                <div class="text-xs mr-2 py-1.5 px-4 text-white bg-red-700 rounded-2xl">
                    @Dish.Type
                </div>
            </div>
        </div>
    </a>
</div>

@code {

    [Parameter]
    public Dish Dish { get; set; }
}
